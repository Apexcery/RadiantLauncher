<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Background Colors -->
    <SolidColorBrush x:Key="Background" Color="#FF191919" />
    <SolidColorBrush x:Key="BackgroundDark" Color="#FF0E0E0E" />
    <SolidColorBrush x:Key="BackgroundLight" Color="#FF212121" />

    <!-- Text Colors -->
    <SolidColorBrush x:Key="Text" Color="#EEEEEE" />
    <SolidColorBrush x:Key="TextDim" Color="#999999" />

    <!-- System Button Colors -->
    <SolidColorBrush x:Key="CloseButtonBackground" Color="#e74c3c" />
    <SolidColorBrush x:Key="CloseButtonBackgroundHover" Color="#b03a2e" />
    <SolidColorBrush x:Key="MaximizeButtonBackground" Color="#f1c40f" />
    <SolidColorBrush x:Key="MaximizeButtonBackgroundHover" Color="#b7950b" />
    <SolidColorBrush x:Key="MinimizeButtonBackground" Color="#2ecc71" />
    <SolidColorBrush x:Key="MinimizeButtonBackgroundHover" Color="#239b56" />

</ResourceDictionary>